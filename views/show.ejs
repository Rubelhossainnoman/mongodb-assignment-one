<section>
    <div class="student_crud">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="start_student_crud">
                        <div class="card shadow-lg mt-5">
                            <div class="card-header">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h1 class="mb-0">Students App</h1>
                                    <a href="/students/create" class="btn btn-primary">Add New Students</a>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="all_students">
                                    <table class="table students_table">
                                      <thead>
                                        <tr>
                                          <th>#ID</th>
                                          <th>Photo</th>
                                          <th>Name</th>
                                          <th>Email</th>
                                          <th>Skill</th>
                                          <th>Age</th>
                                          <th>Actions</th>
                                        </tr>
                                      </thead>
                                      <tbody class="get_all align-middle">
                                        <% data.forEach(item => { %>
                                          <tr>
                                            <th><%= item.id %> </th>
                                            <td>
                                              <% if (item.photo == 'avatar.png') { %>
                                                <img width="100" height="100"  src="/img/<%= item.photo %> " alt="">
                                               <% } else { %>
                                                <img width="100" height="100"  src="/img/studentsPhoto/<%= item.photo %> " alt="">
                                              <% } %>
                                            </td>
                                            <td><%= item.name %> </td>
                                            <td><%= item.email %> </td>
                                            <td><%= item.skill %> </td>
                                            <td><%= item.age %> </td>
                                            <td>
                                              <div class="action_button">
                                                  <a href="/students/<%= item._id %>" class="btn btn-primary"><i class="fas fa-eye"></i></a>
                                                  <a href="/students/edit-single-student/<%= item._id %>" class="btn btn-warning"><i class="fas fa-edit"></i></a>
                                                  <a href="/students/delete/<%= item._id %>" id="delete_students" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                                              </div>
                                            </td>
                                          </tr>
                                        <% }) %>
                                      </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>